<div class="texts-and-fields">
  <h2 class="log-in">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.label :first_name, 'First Name', :class => 'email-field' %><br />
      <em>(Will Not Display On Website)</em>
      <div class="input-form">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
    </div>

    <div>
      <%= f.label :last_name, 'Last Name', :class => 'email-field' %><br />
      <em>(Will Not Display On Website)</em>
      <div class="input-form">
        <%= f.text_field :last_name, autocomplete: "last_name" %>
      </div>
    </div>

    <div>
      <%= f.label :user_name, 'User Name', :class => 'email-field' %><br />
      <em>(Displayed On Website)</em>
      <div class="input-form">
        <%= f.text_field :user_name, autocomplete: "user_name" %>
      </div>
    </div>

    <div>
      <%= f.label :email, 'Email', :class => 'email-field' %><br />
      <em>(Required)</em>
      <div class="input-form">
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
    </div>

    <div>
      <%= f.label :password, 'Password', :class => 'email-field' %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <div class="input-form">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div>
      <%= f.label :password_confirmation, 'Password confirmation', :class => 'email-field' %><br />
      <div class="input-form">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="sign-up-acc">
      <div class="actions">
        <%= f.submit "Sign up", :class => 'submit_button' %>
      </div>

      <div class="devise-shared-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
