<div class="texts-and-fields">
<h2 class="log-in">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.label :email, 'Email', :class => 'email-field' %><br />
    <div class="input-form">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div>
    <%= f.label :password, 'Password', :class => 'password-field' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <div class="input-form">
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  </div>

  <div>
    <%= f.label :password_confirmation, 'Password Confirmation', :class => 'new-password-field' %><br />
    <div class="input-form">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  </div>

<div class="sign-up-acc">
  <div class="actions">
    <%= f.submit "Submit", :class => 'submit_button' %>
  </div>
<% end %>
<div class="devise-shared-links">
<%= render "devise/shared/links" %>
</div>
</div>
</div>
